<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pemasukan"/>

    <LinearLayout
        android:id="@+id/page_name"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/white"
            android:src="@drawable/baseline_arrow_back_ios_24">
        </ImageView>
        <TextView
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catat Transaksi">

        </TextView>
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tempat_beli"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        app:layout_constraintTop_toBottomOf="@id/tempat_beli"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/hijau_tosca"
        app:focusedStrokeColor="@color/hijau_tosca"
        app:unfocusedStrokeColor="@color/hijau_tosca"
        app:boxCornerRadius="20dp"
        app:boxStrokeWidth="2dp">

        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10dp"
            android:text="Beli di mana?"
            android:textColor="@color/abutua"
             />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item"
        android:layout_marginTop="510dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tempat_beli"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/hijau_tosca"
        app:focusedStrokeColor="@color/hijau_tosca"
        app:unfocusedStrokeColor="@color/hijau_tosca"
        app:boxCornerRadius="20dp"
        app:boxStrokeWidth="2dp">

        <EditText
            android:id="@+id/inputField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10dp"
            android:text="Beli apa?"
            android:textColor="@color/abutua"
            android:textColorHint="@android:color/darker_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="580dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Kategori transaksi"
        android:textColor="#FF000000"
        android:textSize="12dp" />



    <EditText
        android:id="@+id/editTextNominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="247dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Rp.0"
        android:inputType="number"
        android:textColor="#FFFFFFFF"
        android:textSize="36dp" />

    <Button
        android:id="@+id/buttonSaveTransaction"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="49dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="730dp"
        android:text="Catat Pengeluaran"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/button_background"
        android:scaleType="centerInside" />



    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="600dp"
        android:layout_gravity="top|right"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_add_circle_outline_24" />

    <!-- Kategori -->
    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="600dp"
        android:layout_gravity="top|left"
        android:background="@drawable/border"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-2dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ðŸ›’"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Belanja harian"
            android:textColor="#FF000000"
            android:textSize="8dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="69.33dp"
        android:layout_height="29dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="600dp"
        android:layout_gravity="top|left"
        android:background="@drawable/border"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="31.63dp"
            android:layout_marginRight="9.26dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Jajan"
            android:textColor="#FF000000"
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="7.14dp"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="-2.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ðŸ•"
            android:textColor="#FF000000"
            android:textSize="15dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="600dp"
        android:layout_gravity="top|left"
        android:background="@drawable/border"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-2dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ðŸ›’"
            android:textColor="#FF000000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Belanja bulanan"
            android:textColor="#FF000000"
            android:textSize="8dp" />
    </FrameLayout>
    <!-- Kategori end -->


    <!--harusnya dropdown-->
    <FrameLayout
        android:layout_width="153dp"
        android:layout_height="32dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="97dp"
        android:layout_gravity="top|left"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="22.93dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Pengeluaran"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp" />
    </FrameLayout>

    <!--kalender-->
    <FrameLayout
        android:layout_width="143dp"
        android:layout_height="32dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="97dp"
        android:layout_gravity="top|right">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="74.15dp"
            android:layout_height="18dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Belum dipilih"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/buttonSelectDate"
            android:layout_width="15.89dp"
            android:layout_height="15dp"
            android:layout_marginLeft="109.1dp"
            android:layout_marginRight="18.01dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/baseline_calendar_month_24" />
    </FrameLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="106dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        app:tint="@color/white"
        android:src="@drawable/baseline_keyboard_arrow_down_24" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="105dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/pengeluaran_ic" />
</FrameLayout>
