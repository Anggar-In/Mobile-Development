<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anggarin"
    tools:context=".ui.tabungan.InputTabunganActivity">

    <ImageView
        android:id="@+id/img_btn_back_inputtabungan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="43dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentdescription" />

    <TextView
        android:id="@+id/txt_buat_tabungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/buat_tabungan"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_tglawal_tabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:text="@string/tanggal_mulai_menabung"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_buat_tabungan" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_tglawal_tabungan"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tglawal_tabungan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_tglawal_tabungan"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/MM_DD_YY"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_kalendertarget_tabungan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="170dp"
        android:src="@drawable/outline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@id/input_layout_tglawal_tabungan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_layout_tglawal_tabungan"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/txt_tgltarget_tabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:text="@string/tanggal_target_dicapai"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/input_layout_tglawal_tabungan" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_tgltarget_tabungan"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tgltarget_tabungan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_tgltarget_tabungan"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/MM_DD_YY"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_kalenderawal_tabungan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="170dp"
        android:src="@drawable/outline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@id/input_layout_tgltarget_tabungan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_layout_tgltarget_tabungan"
        tools:ignore="contentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>