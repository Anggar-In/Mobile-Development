<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anggar"
    tools:context=".ui.tabungan.InputTabunganActivity">

    <ImageView
        android:id="@+id/img_btn_back_inputtabungan"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentdescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/buat_tabungan"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_tglawal_tabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="@string/tanggal_mulai_menabung"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img_btn_back_inputtabungan" />

    <EditText
        android:id="@+id/edt_tglawal_tabungan"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:hint="@string/MM_DD_YY"
        android:inputType="none"
        android:importantForAutofill="no"
        android:textSize="11sp"
        android:layout_marginStart="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:background="@drawable/backround_input"
        android:backgroundTint="@color/hijau_muda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tglawal_tabungan" />


    <ImageView
        android:id="@+id/btn_kalenderawal_tabungan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:src="@drawable/outline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@id/edt_tglawal_tabungan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_tglawal_tabungan"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/txt_tgltarget_tabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/tanggal_target_dicapai"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_tglawal_tabungan" />

    <EditText
        android:id="@+id/edt_tgltarget_tabungan"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:hint="@string/MM_DD_YY"
        android:inputType="none"
        android:importantForAutofill="no"
        android:textSize="11sp"
        android:layout_marginStart="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:background="@drawable/backround_input"
        android:backgroundTint="@color/merah_muda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tgltarget_tabungan" />


    <ImageView
        android:id="@+id/btn_kalendertarget_tabungan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:src="@drawable/outline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@id/edt_tgltarget_tabungan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_tgltarget_tabungan"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/txt_nama_inputtabungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/nama_tabungan"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_tgltarget_tabungan" />

    <EditText
        android:id="@+id/edt_inputnama_tabungan"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:hint="@string/nama_tabungan"
        android:textSize="12sp"
        android:inputType="text"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:background="@drawable/backround_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_nama_inputtabungan"/>

    <TextView
        android:id="@+id/txt_target_inputtabungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/target_dikumpulkan"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_inputnama_tabungan" />

    <EditText
        android:id="@+id/edt_inputtarget_tabungan"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:hint="@string/Rp_0"
        android:textSize="12sp"
        android:inputType="number"
        android:importantForAutofill="no"
        android:layout_marginStart="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:background="@drawable/backround_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_target_inputtabungan"/>

    <Button
        android:id="@+id/btn_simpan_tabungan"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        app:cornerRadius="12dp"
        android:text="@string/simpan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>