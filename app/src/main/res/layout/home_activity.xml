<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="0dp"
        android:layout_height="345dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginTop="-28dp"
            app:cardBackgroundColor="@color/hijau_tua"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginTop="170dp"
                android:layout_marginStart="40dp"
                app:cardBackgroundColor="@color/white_opacity"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="170dp"
                app:cardBackgroundColor="@color/white_opacity"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"></androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="323dp"
            android:layout_height="95dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/hijau_tosca"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >


            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_report">
            </ImageView>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:src="@drawable/ic_invest">
            </ImageView>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="185dp"
                android:src="@drawable/ic_savings">
            </ImageView>
            <ImageView
                android:id="@+id/img_add_budget"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="260dp"
                android:src="@drawable/ic_budget">
            </ImageView>

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Laporan dan analisa"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="85dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Kalkulator investasi"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="155dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Tabungan"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="225dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Anggaran"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/myImageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="390dp"
        tools:ignore="MissingConstraints">

    </ImageView>

    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="297dp"
        android:layout_height="87dp"
        android:layout_gravity="top|left"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/myImageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="748dp">>

        <ImageView
            android:id="@+id/img_rectangle_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_rectangle_group" />



        <ImageView
            android:id="@+id/img_microphone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="232dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_microphone" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_camera" />

        <FrameLayout
            android:id="@+id/container_group_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="116dp"
            android:layout_marginBottom="11dp">

            <ImageView
                android:id="@+id/img_add_pluss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_ellipse_group_1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_add_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/add" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>