<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="0dp"
        android:layout_height="345dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginTop="-28dp"
            app:cardBackgroundColor="@color/hijau_tua"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/saldoatas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="63dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="saldo"
                android:textColor="#FFFFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/saldoangka"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="90dp"
                android:layout_gravity="top"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/saldoatas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Rp.0"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginTop="170dp"
                android:layout_marginStart="40dp"
                app:cardBackgroundColor="@color/white_opacity"

                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp">

                <!-- Teks Pengeluaran di atas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <!-- LinearLayout horizontal untuk teks "Rp.0" dan ikon panah ke bawah -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <!-- Ikon panah ke bawah -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/pengeluaran_ic"/> <!-- Ganti dengan nama file ikon panah -->

                    <!-- Teks Rp.0 -->
                    <TextView
                        android:id="@+id/saldoPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.0"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="170dp"
                app:cardBackgroundColor="@color/white_opacity"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Teks Pengeluaran di atas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <!-- LinearLayout horizontal untuk teks "Rp.0" dan ikon panah ke bawah -->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <!-- Ikon panah ke bawah -->
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/pemasukan_ic"/> <!-- Ganti dengan nama file ikon panah -->

                        <!-- Teks Rp.0 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp.0"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="323dp"
            android:layout_height="95dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/hijau_tosca"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >


            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_report">
            </ImageView>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:src="@drawable/ic_invest">
            </ImageView>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="185dp"
                android:src="@drawable/ic_savings">
            </ImageView>
            <ImageView
                android:id="@+id/img_add_budget"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="260dp"
                android:src="@drawable/ic_budget">
            </ImageView>

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Laporan dan analisa"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="85dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Kalkulator investasi"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="155dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Tabungan"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>
            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="225dp"
                android:gravity="center"
                android:src="@drawable/ic_report"
                android:text="Anggaran"
                android:textColor="@android:color/white"
                android:textSize="8sp">
            </TextView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        android:id="@+id/transaksi"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Transaksi Terakhir"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|right"
            android:fontFamily="@font/poppins_medium"
            android:text="Lihat Semua">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            >

        </ImageView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTransaksi"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/transaksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:nestedScrollingEnabled="false" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTransaksi"
        android:id="@+id/budgeting"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Keuangan bulan ini"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium">
        </TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/budgeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/budgetbulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="November 2024"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

            <LinearLayout
                android:id="@+id/progressname"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/budgetbulan"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textbawah"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Budget"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="sisa"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end|right"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/merah"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Rp100.000">

                </TextView>
            </LinearLayout>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                app:layout_constraintTop_toBottomOf="@id/progressname"
                android:id="@+id/progressBar"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                android:max="100"
                android:visibility="visible"
                android:indeterminate="false"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="terpakai Rp1.900.000/Rp2.000.000"
                app:layout_constraintStart_toStartOf="parent">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/myImageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="390dp"
        tools:ignore="MissingConstraints">

    </ImageView>

    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="297dp"
        android:layout_height="87dp"
        android:layout_gravity="top|left"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="420dp"
        app:layout_constraintTop_toBottomOf="@+id/info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="748dp">>

        <ImageView
            android:id="@+id/img_rectangle_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_rectangle_group" />



        <ImageView
            android:id="@+id/img_microphone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="232dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_microphone" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_camera" />

        <FrameLayout
            android:id="@+id/container_group_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="116dp"
            android:layout_marginBottom="11dp">

            <ImageView
                android:id="@+id/img_add_pluss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_ellipse_group_1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_add_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/add" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>